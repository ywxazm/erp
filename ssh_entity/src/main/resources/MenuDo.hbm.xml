<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.ywx.erp.entity.MenuDo" table="menu">
        <id name="menuid" type="java.lang.String" />
        <property name="menuname" type="java.lang.String"/>
        <property name="icon" type="java.lang.String"/>
        <property name="url" type="java.lang.String"/>
        <property name="pid" type="java.lang.String"/>
        <bag name="menus" order-by="menuid">                    <!--TODO: 注意这种自关联的配置-->
            <key column="pid" />
            <one-to-many class="com.ywx.erp.entity.MenuDo" />
        </bag>
    </class>
</hibernate-mapping>
